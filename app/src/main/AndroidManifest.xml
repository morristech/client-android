<manifest
  package="com.guru.cocktails"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:name=".App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name">

    <activity
      android:name="com.guru.cocktails.ui._remove.main.MainActivity"
      android:theme="@style/Theme.AppCompat.Light">
    </activity>

    <activity
      android:name="com.guru.cocktails.ui._remove.example1.Example1Activity"
      android:theme="@style/Theme.AppCompat.Light"/>

    <activity
      android:name="com.guru.cocktails.ui._remove.example2.Example2Activity"
      android:theme="@style/Theme.AppCompat.Light"/>

    <activity
      android:name="com.guru.cocktails.ui._remove.example3.Example3Activity"
      android:theme="@style/Theme.AppCompat.Light"/>

    <activity
      android:name=".ui.academy.AcademyActivity"
      android:theme="@style/Theme.AppCompat.Light"/>

    <activity
      android:name=".ui.cocktails.MainActivity"
      android:theme="@style/Theme.AppCompat.Light">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:name=".ui.ingredients.IngredientsHolderFragment"
      android:theme="@style/Theme.AppCompat.Light"/>

    <activity
      android:name=".ui.ingredient.IngredientActivity"
      android:theme="@style/AppThemeTranslucent"/>

    <activity
      android:name=".ui.description.DescriptionActivity"
      android:theme="@style/Theme.AppCompat.Light"/>

  </application>
</manifest>